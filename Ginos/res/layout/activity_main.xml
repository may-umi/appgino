<!-- About Button -->
     <Button
         android:id="@+id/aboutBtn"
         android:layout_width="110dp"
         android:layout_height="110dp"
         android:layout_alignBaseline="@+id/loyaltyBtn"
         android:layout_alignBottom="@+id/loyaltyBtn"
         android:layout_alignLeft="@+id/placeorderBtn"
         android:background="@drawable/aboutus"
         android:textSize="18sp" />
<!-- Loyalty Button -->
     <Button
         android:id="@+id/loyaltyBtn"
         android:layout_width="110dp"
         android:layout_height="110dp"
         android:layout_alignLeft="@+id/eshopBtn"
         android:layout_below="@+id/eshopBtn"
         android:background="@drawable/loyalty"
         android:textSize="18sp" />
<!-- e-shop Button -->
     <Button
         android:id="@+id/eshopBtn"
         android:layout_width="110dp"
         android:layout_height="110dp"
         android:layout_centerVertical="true"
         android:layout_toRightOf="@+id/aboutBtn"
         android:background="@drawable/eshop"
         android:textSize="18sp" />
     
<!-- Place Order Button -->
     <Button
         android:id="@+id/placeorderBtn"
         android:layout_width="110dp"
         android:layout_height="110dp"
         android:layout_above="@+id/aboutBtn"
         android:layout_alignParentLeft="true"
         android:layout_marginLeft="34dp"
         android:background="@drawable/placeorder"
         android:textSize="18sp" />

</RelativeLayout>